{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "assets": [],
    "watchAssets": true,
    "paths": {
      "@common/*": ["common/*"],
      "@modules/*": ["modules/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"]
    }
  }
}
